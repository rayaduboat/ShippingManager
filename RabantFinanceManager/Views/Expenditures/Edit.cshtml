@model FinanceManager.Model.Models.ExpenditureCreateModel

@{
    ViewData["Title"] = "Edit";
}

<h3 class="text-center" style="font-weight:700;background-color:darkcyan">Edit Expenditure</h3>
<hr />
<div class="row">
    <div class="col-sm-1"></div>
    <div class="col-sm-10">
        <div class="container">
            <div class="row">
                <div class="col-sm-10">
                    <div class="panel panel-success">
                        <div class="panel panel-heading"><h4 style="text-align:center"> </h4> </div>
                        <form asp-action="Edit" style="background-color:wheat;">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="ExpenditureId" />
                            <div class="form-group row">
                                <label asp-for="BatchId" class="col-form-label col-sm-2"></label>
                                <div class="col-sm-6">
                                    <select asp-for="BatchId" class="form-control" asp-items="@Model.ExpBatches">
                                        <option>@Model.BatchId</option>
                                    </select>
                                </div>
                                <span asp-validation-for="BatchId" class="text-danger"></span>
                            </div>
                            <div class="form-group row">
                                <label asp-for="Name" class="col-form-label col-sm-2"></label>
                                <div class="col-sm-6">
                                    <select asp-for="Name" asp-items="@Model.ExpNames" class="form-control">
                                        <option>@Model.Name</option>
                                    </select>
                                </div>
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group row">
                                <label asp-for="Description" class="col-form-label col-sm-2"></label>
                                <div class="col-sm-6">
                                    <select asp-for="Description" asp-items="@Model.ExpDescription" class="form-control">
                                        <option>@Model.Description</option>
                                    </select>
                                </div>

                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                            <div class="form-group row">
                                <label asp-for="ModeOfPayment" class="col-form-label col-sm-2"></label>
                                <div class="col-sm-6">
                                    <select asp-for="ModeOfPayment" asp-items="@Model.ExpPayMode" class="form-control"></select>
                                </div>
                                <span asp-validation-for="ModeOfPayment" class="text-danger"></span>
                            </div>
                            <div class="form-group row">
                                <label asp-for="Amount" class="col-form-label col-sm-2"></label>
                                <div class="col-sm-6">
                                    <input asp-for="Amount" class="form-control" />
                                </div>
                                <span asp-validation-for="Amount" class="text-danger"></span>
                            </div>
                            <div class="form-group row">
                                <label asp-for="CreatedDate" class="control-label col-sm-2"></label>
                                <div class="col-sm-6">
                                    <input asp-for="CreatedDate" type="date" class="form-control" />
                                </div>

                                <span asp-validation-for="CreatedDate" class="text-danger"></span>
                            </div>
                            <div class="form-group row ">
                                <div class="col-sm-2"></div>
                                <div class="col-sm-6">
                                    <input type="submit" value="Update" class="btn btn-primary" />
                                    <a asp-action="Index" asp-controller="Expenditures" class="btn btn-primary">Exit</a>
                                </div>

                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-sm-1"></div>
</div>
<div>
    @*<a asp-action="Index">Back to List</a>*@
</div>
<p>
    <a asp-action="Index" asp-controller="Home">Main Management Page</a>
</p>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
