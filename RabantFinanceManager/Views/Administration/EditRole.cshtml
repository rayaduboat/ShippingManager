            <div class="row">
                <div class="col-md-6 FormDesign">
                    <form asp-action="EditRole">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group row">
                            <label asp-for="RoleId" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-6">
                                <input asp-for="RoleId" class="form-control" readonly />
                                <span asp-validation-for="RoleId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="RoleName" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-6">
                                <input asp-for="RoleName" class="form-control" />
                                <span asp-validation-for="RoleName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <span class="col-sm-2"></span>
                            <div class="col-sm-6">
                                <input type="submit" value="Update" class="btn btn-primary" />
                                <a class="btn btn-primary" asp-action="Index">Cancel</a>
                            </div>
                        </div>
                        <div class="card FormDesign">
                            <div class="card-header">
                                <h5>Users in Role</h5>
                            </div>
                            <div class="card-body">
                                @if (Model.Users.Any())
                                {
                                    foreach (var user in Model.Users)
                                    {
                                        <h5 class="card-title">@user</h5>
                                    }
                                }
                                else
                                {
                                    <h5 class="card-title">No User in this role</h5>
                                }
                            </div>
                            <div class="card-footer">
                                <a asp-action="EditUserInrole" asp-controller="Administration" asp-route-roleId="@Model.RoleId" class="btn btn-primary" style="width:auto">Add or Remove User</a>
                                @*<a href="#" class="btn btn-primary" style="width:auto">Remove User</a>*@
                            </div>
                        </div>
                    </form>
                </div>
            </div>
